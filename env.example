# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================

# Modo de base de datos para desarrollo:
# - "local": MongoDB local (puerto 27017)
# - "atlas": MongoDB Atlas (producción)
# - "auto": Automático (detecta qué está disponible)
DB_MODE=local

# MongoDB Atlas (solo si DB_MODE=atlas o auto y local no disponible)
MONGODB_ATLAS_URI=mongodb+srv://usuario:password@cluster.mongodb.net/database

# MongoDB de producción (solo para NODE_ENV=production)
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/database

# ==============================================
# JWT Y AUTENTICACIÓN
# ==============================================
JWT_SECRET=tu_jwt_secret_super_secreto_aqui
NEXTAUTH_SECRET=tu_nextauth_secret_aqui
NEXTAUTH_URL=http://localhost:3000

# ==============================================
# SERVICIOS EXTERNOS (OPCIONAL)
# ==============================================

# Cloudinary (para subida de imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Stripe (para pagos)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# ==============================================
# CONFIGURACIÓN DE ENTORNO
# ==============================================
NODE_ENV=development
